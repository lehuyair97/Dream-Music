<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="@android:color/transparent"
        android:layout_marginHorizontal="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:id="@+id/rl_media_expended_notification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/black"
            android:layout_marginBottom="1.0dp">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="7dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/color_Main1"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/SongName_Notification"
                android:layout_marginTop="8dp"
                android:layout_width="225dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Song's Name"
                android:textSize="15dp"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:id="@+id/tv_Artist_notification"
                android:layout_marginTop="27dp"
                android:layout_width="225dp"
                android:textColor="#A59999"
                android:layout_height="wrap_content"
                android:text="Artist's Name"
                android:textSize="13dp"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:id="@+id/img_Previous_Notification"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_previous"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="90dp"/>
            <ImageView
                android:id="@+id/img_Play_Notification"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_play"
                android:backgroundTint="@color/white"
                android:layout_marginTop="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"/>
            <ImageView
                android:id="@+id/img_next_Notification"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_next"
                android:layout_marginTop="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
            <SeekBar
                android:id="@+id/seekBar_Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/seekbar_thumb_custom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>